<ul class="rr-list">
  {{#each model.songs as |song|}}
    <li class="rr-list-item" data-test-rr="song-list-item">
      {{capitalize song.title}}

      {{star-rating class="fr" rating=song.rating item=song onClick=(action 'updateRating' song)}}
    </li>
  {{else}}
    <li class="rr-empty-message">
      No {{capitalize model.name}} songs yet.
    </li>
  {{/each}}
</ul>

<div class="rr-new-label">
  {{#if isAddingSong}}
    <form class="rr-inline-form" onsubmit={{action "saveSong"}} data-test-rr="new-song-form">
      {{input type="text" class="rr-input" value=newSongTitle placeholder=newSongPlaceholder data-test-rr="new-song-input"}}

      <button type="button" class="rr-action-button" disabled={{isAddButtonDisabled}} onclick={{action "saveSong"}} data-test-rr="new-song-button">Add</button>

      <span class="rr-cancel-icon" onclick={{action "cancelAddSong"}}>
        {{fa-icon "times"}}
      </span>
    </form>
  {{else}}
    <label onclick={{action "addSong"}} data-test-rr="new-song-label">
      {{fa-icon "plus"}}
      <span class="ml1">Add new song</span>
    </label>
  {{/if}}
</div>
